<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_height = "match_parent"
              android:layout_width = "match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@android:color/holo_blue_light"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center">

        <Button
            android:id="@+id/bt_addtag_back"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/newback"/>

        <TextView
            android:id="@+id/tv_addtag_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="输入标签名"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bt_addtag_create"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/add"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/newsearch">

        <EditText
            android:id="@+id/et_addtag_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <Button
            android:id="@+id/bt_addtag_positive"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/okstate"
            android:text="确认"
            android:textSize="10sp"/>
    </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <me.ez0ne.ouring.tag.CustomView
        android:id="@+id/tag_view"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <me.ez0ne.ouring.tag.WaveView
        android:layout_weight="1"
        android:id="@+id/addtag_wave"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>

</LinearLayout>
